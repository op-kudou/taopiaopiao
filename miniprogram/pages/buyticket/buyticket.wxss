/* miniprogram/pages/buyticket/buyticket.wxss */
.camera{
  width: 100%;
  height: auto;
}
.cameradetail{
  width: 100%;
  height: auto;
  padding: 10px 0;
  /* border-bottom: 1px solid #f0f0f0; */
  background-color: #fff;
  margin-bottom: 2px;
}
.item{
  width: 100%;
  height: 30px;
  line-height: 30px;
  display: flex;
}
.name{
  width: 78%;
  height: 30px;
  line-height: 30px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.num{
  width: 22%;
  height: 30px;
  line-height: 30px;
  text-align: right;
  font-size: 12px;
  color:#cbcbcb;
  transform: scale(0.8);
}
.addressdetail{
  width: 78%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 12px;
  color: #999;
}
.distend{
  width: 22%;
  font-size: 12px;
  color:#999;
  text-align: right;
  transform: scale(0.8);
}
.item>text{
  height: 20px;
  line-height: 20px;
  font-size: 12px;
  color:#999;
  display: inline-block;
  padding: 1px 4px;
  border: 1px solid #cbcbcb;
  border-radius: 2px;
  /* margin-right: 10px; */
  transform: scale(0.8);
}