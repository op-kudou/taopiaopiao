page{
  background-color: #f2f2f2;
}
.count{
  height: 40px;
  line-height: 40px;
  font-size: 12px;
  color:#828282;
  background-color: #fff;
  padding-left: 20px;
}
.movie{
  width: 100%;
  height: auto;
}
.time{
  width: 100%;
  height: 35px;
  line-height: 35px;
  font-size: 12px;
  color:#828282;
  padding-left: 15px;
}
.detail{
  width: 100%;
  height: 140px;
  padding: 15px;
  box-sizing: border-box;
  display: flex;
  margin: 1px 0;
  background-color: #fff;
}
.pic{
  width: 25%;
  height: 110px;
  margin-right: 10px;
  border-radius: 8px;
}
.pic>image{
  width:100%;
  height: 110px;
  border-radius: 8px;
}
.msg{
  width: 75%;
  height: 110px;
  font-size: 12px;
  color:#828282;
}
.msg>view{
  height: 28px;
  line-height: 30px;
}
.title{
font-size: 16px;
color:#000;
}

.orange{
  color:#ff9c1b;
}

