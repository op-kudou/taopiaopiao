/* miniprogram/pages/camera/camera.wxss */
page {
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 10px;
  box-sizing: border-box;
}
.top{
  width: 100%;
  height: 50px;
  line-height: 50px;
  position: relative;
  font-size: 14px;
}
.address{
  display: inline-block;
  height: 50px;
  line-height: 50px;
  width: 17%;
  position: absolute;
  top: 0;
  left: 0;
}
.search{
  display: inline-block;
  width: 80%;
  height: 30px;
  line-height: 30px;
  margin-top: 10px;
  border-radius: 20px;
  background-color: #f5f5f5;
  position: absolute;
  top: 0;
  right: 0;
  text-align: center;
}
.grey{
  color: #cbcbcb;
}
.big{
  position: absolute;
  top:0px;
  left: 45px;
  display: block;
  color: #cbcbcb;
}
.camera{
  width: 100%;
  height: auto;
}
.cameradetail{
  width: 100%;
  height: auto;
  padding: 10px 0;
  border-bottom: 1px solid #f0f0f0;
}
.item{
  width: 100%;
  height: 30px;
  line-height: 30px;
  display: flex;
}
.name{
  width: 78%;
  height: 30px;
  line-height: 30px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.num{
  width: 22%;
  height: 30px;
  line-height: 30px;
  text-align: right;
  font-size: 12px;
  color:#cbcbcb;
  transform: scale(0.8);
}
.addressdetail{
  width: 78%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 12px;
  color: #999;
}
.distend{
  width: 22%;
  font-size: 12px;
  color:#999;
  text-align: right;
  transform: scale(0.8);
}
.item>text{
  height: 20px;
  line-height: 20px;
  font-size: 12px;
  color:#999;
  display: inline-block;
  padding: 1px 4px;
  border: 1px solid #cbcbcb;
  border-radius: 2px;
  /* margin-right: 10px; */
  transform: scale(0.8);
}