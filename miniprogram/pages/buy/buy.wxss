.top{
  width: 100%;
  height: auto;
  background-color: #000066;
  color:rgb(245, 243, 253);
  padding: 10px 20px;
  box-sizing: border-box;
}
.moviename{
  font-size: 24px;
  height: 34px;
  line-height: 34px;
}
.detail{
  font-size: 14px;
  height: 30px;
  line-height: 30px;
}

.body{
  height: calc(100% - 94px);
  width: 100%;
  background-color: #fff;
  padding: 20px 10px;
  box-sizing: border-box;
  font-size: 16px;
  color: #000;
}
.group{
  width: 100%;
  height: auto;
  display: flex;
}
.groupname{
  display: inline-block;
  text-align: left;
  width:30%;
  height: 40px;
}
.tip{
  width:100%;
  height: 40px;
}
.money{
  display: inline-block;
  text-align: right;
  color:#ff33b1;
  width: 70%;
}
input{
  width: 70%;
  display: inline-block;
  text-align: left;
  border-bottom: 1px solid #ccc;
}
.tag{
  display: block;
  font-size: 14px;
  color:#999;
}
.pay{
  position: fixed;
  width: 100%;
  height: 40px;
  line-height: 40px;
  background-color: #FF3366;
  color:#fff;
  text-align: center;
  bottom: 0;
  left: 0;
}