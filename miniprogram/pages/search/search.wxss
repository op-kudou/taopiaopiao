/* miniprogram/pages/search/search.wxss */
.top{
  width: 100%;
  height: 50px;
  line-height: 50px;
  position: relative;
  font-size: 14px;
  background-color: #fff;
  padding: 10px 10px;
  box-sizing: border-box;
  display: flex;
}
.search{
  display: inline-block;
  width: 80%;
  height: 30px;
  line-height: 30px;
  border-radius: 3px;
  background-color: #f5f5f5;
  text-align: left;
  padding-left: 45px;
}
.grey{
  color: #cbcbcb;
}
.big{
  position: absolute;
  top:10px;
  left: 30px;
  display: block;
  color: #cbcbcb;
}
.cancel{
  display: inline-block;
  width: 20%;
  height: 30px;
  line-height: 30px;
  text-align: center;
  color:#06f;
}

.count{
  height: 40px;
  line-height: 40px;
  font-size: 12px;
  color:#828282;
  background-color: #fff;
  padding-left: 20px;
}
.movie{
  width: 100%;
  height: auto;
  margin-bottom: 15px;
}
.m-name{
  width: 100%;
  height: 35px;
  line-height: 35px;
  font-size: 12px;
  background-color:#fff;
  color: #000;
  padding-left: 15px;
  margin: 1px 0;
}
.detail{
  width: 100%;
  height: 140px;
  padding: 15px;
  box-sizing: border-box;
  display: flex;
  margin: 1px 0;
  background-color: #fff;
}
.pic{
  width: 25%;
  height: 110px;
  margin-right: 10px;
  border-radius: 8px;
}
.pic>image{
  width:100%;
  height: 110px;
  border-radius: 8px;
}
.msg{
  width: 75%;
  height: 110px;
  font-size: 12px;
  color:#828282;
}
.msg>view{
  height: 28px;
  line-height: 30px;
}
.title{
font-size: 16px;
color:#000;
}

.orange{
  color:#ff9c1b;
}
.cameradetail{
  width: 100%;
  height: auto;
  padding: 10px 20px;
  border-bottom: 1px solid #f0f0f0;
  background-color: #fff;
  box-sizing: border-box;
}
.item{
  width: 100%;
  height: 30px;
  line-height: 30px;
  display: flex;
}
.name{
  width: 78%;
  height: 30px;
  line-height: 30px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.num{
  width: 22%;
  height: 30px;
  line-height: 30px;
  text-align: right;
  font-size: 12px;
  color:#cbcbcb;
  transform: scale(0.8);
}
.addressdetail{
  width: 78%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 12px;
  color: #999;
}
.distend{
  width: 22%;
  font-size: 12px;
  color:#999;
  text-align: right;
  transform: scale(0.8);
}
.item>text{
  height: 20px;
  line-height: 20px;
  font-size: 12px;
  color:#999;
  display: inline-block;
  padding: 1px 4px;
  border: 1px solid #cbcbcb;
  border-radius: 2px;
  /* margin-right: 10px; */
  transform: scale(0.8);
}
