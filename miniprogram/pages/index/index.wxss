/**index.wxss**/

page {
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 10px;
  box-sizing: border-box;
}
.top{
  width: 100%;
  height: 50px;
  line-height: 50px;
  position: relative;
  font-size: 14px;
}
.address{
  display: inline-block;
  height: 50px;
  line-height: 50px;
  width: 17%;
  position: absolute;
  top: 0;
  left: 0;
}
.search{
  display: inline-block;
  width: 80%;
  height: 30px;
  line-height: 30px;
  margin-top: 10px;
  border-radius: 20px;
  background-color: #f5f5f5;
  position: absolute;
  top: 0;
  right: 0;
  text-align: center;
}
.grey{
  color: #cbcbcb;
}
.big{
  position: absolute;
  top:0px;
  left: 45px;
  display: block;
  color: #cbcbcb;
}
.navTab{
  width: 100%;
  height: 40px;
  line-height: 40px;
  display: flex;
  justify-content: space-evenly;
  margin-bottom: 10px;
}
.navTab>view{
  text-align: center;
}
.cur{
  font-weight: bold;
  border-bottom: 3px solid #ff3366;
}
.show{
  display: block;
}
.hidden{
  display: none;
}