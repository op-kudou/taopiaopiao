/* miniprogram/pages/moviedetail/moviedetail.wxss */
page{
  background-color: #21233c;
}
.hidden{
  display: none;
}
.top{
  width: 100%;
  height: 250px;
  padding: 30px 20px 0px 20px;
  box-sizing: border-box;
  position: relative;
}
.moviemsg{
  width: 100%;
  height: 170px;
}
.image{
  float: left;
  width: 34%;
  height: 170px;
}
.image image{
  width: 100%;
  height: 100%;
  border-radius: 15px;
}
.msgright{
  width: 62%;
  height: 170px;
  float: right;
  color: #fff;
}
.moviename{
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 20px;
}
.infomation{
  font-size: 12px;
  color: f2f3f7;
  margin-bottom: 10px;
}
button{
  background-color: #383850;
  color: #fefefe;
  width: 70px;
  height: 35px;
  margin-top: 20px;
  font-size: 15px;
  border-radius: 15px;
  float: left;
  font-weight: normal;
}
.count{
  box-sizing: border-box;
  width: 100%;
  height: 40px;
  line-height: 40px;
  background-color: #32344b;
  border-radius: 10px;
  padding: 0 20px;
}
.c-left{
  font-family: simsun;
  font-size: 16px;
  color:#fbfbfb;
}
.c-right{
  color: #ff9c1b;
  font-size: 14px;
  display: inline-block;
  float: right;
}

.bottom{
  box-sizing: border-box;
  width: 100%;
  min-height: 400px;
  background-color: #fff;
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
  padding: 0 20px;
}
.title{
  width: 100%;
  height: 40px;
  line-height: 40px;
  font-size: 15px;
  color:#000;
}
.introduce{
  position: relative;
  width: 100%;
  height:  78px;
  line-height: 30px;
  border-collapse: lightyellow;
  border-top: 1px solid #f6f6f6;
  border-bottom: 1px solid #f6f6f6;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 13px;
  padding: 10px 0 20px;
}
.high{
  height: auto;
}
.open{
  position: absolute;
  bottom: 0px;
  right: 0px;
  background-color: #fff;
  padding: 7px 8px;
  color: #1493f0;
}
scroll-view{
  height: auto;
  margin-top: 10px;
}
.movie-item{
  display: flex;
  flex-direction: row;
  width: 600px;
}
.actor{
  width: 100px;
  height:auto;
  margin-right: 5px;
  position: relative;
  text-align: center;
  font-size: 13px;
}
.actor image{
  width: 100px;
  height: 120px;
}
.actornum{
  width: 100%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  color:#1493f0;
  font-size: 13px;
  border-bottom: 1px solid #f6f6f6;
  margin-bottom: 50px;
}
.trailer{
  height:100px;
  margin-right: 5px;
  position: relative;
  text-align: center;
}
.trailer image{
  height: 100px;
  width: 160px;
}

.buy{
  width: 100%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  color: #fff;
  background-image: linear-gradient(to right,#ff33b1,#ff3366);
  position: fixed;
  bottom: 0;
  left: 0;
}